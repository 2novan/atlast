<div class="playlist-page-container">
  <div class="container">
    <div class="expanded-album-card">
      <%= image_tag(release.image_url, :alt => release.name, class: "album-cover" ) %>
      <div class="album-info">
        <div class="album-name">
          <p><%= release.name  %></p>
          <p><%= release.artist.name %></p>
        </div>
        <div class="album-text">
          <div class="release-date">
            <% r = release.release_date %>
            <p><%= r.strftime('%d %b %Y')%></p>
          </div>
          <div class="tracklist-info">
            <p><%= release.total_tracks %> <%= release.total_tracks > 1 ? "tracks" : "track" %> -  <%= release.formatted_duration%></p>
          </div>
        </div>
      </div>
        <div class="add-release-to-playlist">
          <%= link_to new_playlist_path(release.tracks), title: "Add to my playlist" do %>
            <%= image_tag("plus.svg", :alt => "plus", class: "remove-icon", width: 40)%>
          <% end %>
        </div>
      <div class="separation-line"></div>
    </div>
    <div class="album-tracks">
      <ul>
        <% release.tracks.order(track_number: :asc).each do |track| %>
          <li class="track">
            <div class="left-info"><strong><%= track.track_number %></strong> - <%= track.name %> - <%= Time.at(track.duration/1000.0).utc.strftime("%M:%S") %> </div>  
            <%= link_to new_playlist_path(track.spotify_id) do %>
              <% if @playlist.includes?(track.name) %>
                <%= image_tag("minus-circle.svg", :alt => "plus", class: "remove-icon", width: 20)  %>
              <% else %>
                <%= image_tag("plus.svg", :alt => "minus", class: "remove-icon", width: 20)%>
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>