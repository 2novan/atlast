<div class="container">
  <% if @artists.blank? %>
    <p>No artist found</p>
  <% else %>
    <div class="cards-artist-container">
      <p class="search-result"><%= @results_number%> artists found</p>
      <% @artists.each do |artist| %>
        <%= render "shared/artist_card", artist: artist %>
      <% end %>
    </div>
  <% end %>
</div>
